{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,

    
    "rootDirs": [
      "src",
    ]
  },
  "include": [
    "src/**/*", "storybook/src/stories", "libraries", "src/@types/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}